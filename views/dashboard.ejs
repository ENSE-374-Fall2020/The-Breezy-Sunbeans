        <div class="p-2 w-100 flex-fill">
            <h4 class="card-title">My Meetings</h4>
            <% for (var loopCounter=0; loopCounter<meetings.length; loopCounter++){ %>
                <% if ((meetings[loopCounter].username1 == user) || (meetings[loopCounter].username2 == user)) { %>
